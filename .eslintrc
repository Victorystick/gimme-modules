{
	"rules": {
		"indent": [ 2, "tab", { "SwitchCase": 1 }],
		"quotes": [ 2, "single" ],
		"linebreak-style": [ 2, "unix" ],
		"semi": [ 2, "always" ],
		"no-mixed-spaces-and-tabs": [ 2, "smart-tabs" ],
		"no-cond-assign": [ 0 ]
	},
	"env": {
		"browser": true,
		"mocha": true,
		"node": true
	},
	"extends": "eslint:recommended"
}
